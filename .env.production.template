# Production Environment Configuration Template
# ButcApp Production için Environment Variables

# =============================================================================
# TEMEL AYARLAR
# =============================================================================
NODE_ENV=production
PORT=3001
DOMAIN=butcapp.com

# =============================================================================
# VERİTABANI AYARLARI
# =============================================================================
# SQLite (Önerilen)
DATABASE_URL=sqlite:///var/lib/butcapp/butcapp.db

# Alternatif PostgreSQL (kullanılmıyorsa boş bırakın)
# POSTGRES_URL=postgresql://username:password@localhost:5432/butcapp_db

# =============================================================================
# GÜVENLİK AYARLARI
# =============================================================================
# JWT Secret - Güçlü ve rastgele olmalı
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_RANDOM_STRING

# Session Secret - Güçlü ve rastgele olmalı
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_VERY_STRONG_RANDOM_STRING

# NextAuth.js Secret
NEXTAUTH_SECRET=CHANGE_THIS_TO_ANOTHER_STRONG_RANDOM_STRING
NEXTAUTH_URL=https://butcapp.com

# =============================================================================
# API AYARLARI
# =============================================================================
# Public API URL (Client tarafında kullanılır)
NEXT_PUBLIC_API_URL=https://butcapp.com

# Server API URL (Server tarafında kullanılır)
API_URL=https://butcapp.com

# CORS ayarları
ALLOWED_ORIGINS=https://butcapp.com,https://www.butcapp.com

# =============================================================================
# EMAIL AYARLARI (İsteğe Bağlı)
# =============================================================================
EMAIL_FROM=noreply@butcapp.com
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# SendGrid (alternatif)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@butcapp.com

# =============================================================================
# ANALYTICS AYARLARI (İsteğe Bağlı)
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Vercel Analytics
VERCEL_ANALYTICS_ID=

# Plausible Analytics
PLAUSIBLE_DOMAIN=butcapp.com

# =============================================================================
# ÖDEME AYARLARI (İsteğe Bağlı)
# =============================================================================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# =============================================================================
# DOSYA YÜKLEME AYARLARI
# =============================================================================
# Cloudinary (Resim yükleme)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AWS S3 (Dosya depolama)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=butcapp-uploads

# =============================================================================
# CACHE AYARLARI (İsteğe Bağlı)
# =============================================================================
# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Memcached
MEMCACHED_URL=memcached://localhost:11211

# =============================================================================
# LOG AYARLARI
# =============================================================================
LOG_LEVEL=info
LOG_FILE=/var/log/butcapp/app.log

# =============================================================================
# MONİTORİNG AYARLARI (İsteğe Bağlı)
# =============================================================================
# Sentry (Hata takibi)
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Datadog
DATADOG_API_KEY=
DATADOG_APP_KEY=

# =============================================================================
# RATE LIMITING AYARLARI
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# WEBHOOK AYARLARI (İsteğe Bağlı)
# =============================================================================
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# =============================================================================
# SOSYAL MEDYA AYARLARI (İsteğe Bağlı)
# =============================================================================
# Twitter API
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Facebook API
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# =============================================================================
# DIŞ HİZMETLER (İsteğe Bağlı)
# =============================================================================
# OpenAI
OPENAI_API_KEY=

# Google Maps
GOOGLE_MAPS_API_KEY=

# Weather API
WEATHER_API_KEY=

# =============================================================================
# SEO AYARLARI
# =============================================================================
META_TITLE=ButcApp - Finansal Yönetim Uygulaması
META_DESCRIPTION=Finansal yönetim, bütçe takibi ve yatırım analizi uygulaması
META_KEYWORDS=finans,bütçe,takip,yatırım,analiz
OG_IMAGE=https://butcapp.com/og-image.png

# =============================================================================
# PERFORMANCE AYARLARI
# =============================================================================
# Next.js
NEXT_TELEMETRY_DISABLED=1
NEXT_MINIMIZE=true
NEXT_OPTIMIZE_FONTS=true
NEXT_OPTIMIZE_IMAGES=true

# =============================================================================
# GELİŞTİRME AYARLARI (Production'da false olmalı)
# =============================================================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false

# =============================================================================
# ÖZEL AYARLAR
# =============================================================================
# Uygulama versiyonu
APP_VERSION=1.0.0

# Maintenance mode
MAINTENANCE_MODE=false

# Feature flags
ENABLE_BETA_FEATURES=false
ENABLE_NEW_DASHBOARD=false
ENABLE_ANALYTICS=true

# =============================================================================
# GÜVENLİK BAŞLIKLARI
# =============================================================================
# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' data:"
CSP_CONNECT_SRC="'self' https://api.butcapp.com"

# =============================================================================
# BACKUP AYARLARI
# =============================================================================
# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup retention (days)
BACKUP_RETENTION_DAYS=7

